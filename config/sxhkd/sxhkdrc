# reloads sxhkd configuration:
super + shift + ctrl + r
    pkill -USR1 -x sxhkd; notify-send 'sxhkd' 'Перезагрузка конфигурации HOTKEYS' -t 1500; setxkbmap -layout 'us,ru' -option 'grp:caps_toggle,grp_led: caps'; notify-send 'sxhkd' 'Перезагрузка языка'

    
# Launch Terminal
super + Return
    alacritty

# Hide or Unhide Polybar

# Set random wallpaper
super + w
	sh ~/.config/dotfiles/bin/random_wall.sh
    
# Launch Rofi Menu
super + {d,x}
    {setxkbmap -layout us;rofi -m -1 -show drun,setxkbmap -layout us; sh ~/.config/dotfiles/bin/powermenu.sh}

# Launch Applications
super + shift + f
	firefox
super + shift + i
	firefox --private-window
super + shift + t
	Telegram
super + shift + l
	sh $HOME/.config/dotfiles/bin/screen-lock.sh
super + shift + x
	sh $HOME/.config/dotfiles/bin/xcolor-pick
super + shift + n
    obsidian
super + shift + h
    sh $HOME/.config/dotfiles/bin/launch_vpn.sh &
super + shift + y
    sh $HOME/.config/dotfiles/bin/toggle-polybar &
Print
    flameshot gui

super + p
    sh ~/.config/dotfiles/bin/display-menu
# Volume controls
XF86Audio{RaiseVolume,LowerVolume,Mute,MicMute}
    sh ~/.config/dotfiles/bin/volume{ --up, --down, --toggle, --toggle_mic}

# Brightness controls
XF86MonBrightness{Up,Down}
    sh ~/.config/dotfiles/bin/brightness{ --up, --down}

# BSPWM HOTKEYS

# quit/restart bspwm
ctrl + shift + {q,r}
    bspc {quit,wm -r}

# close and kill
super + c
    bspc node -c

# alternate between the tiled and monocle layout
super + space
	bspc node -t "~"{floating,tiled}


#
# state/flags
#

# set the window state
super + {t,ctrl + t,f}
	bspc node -t {tiled,pseudo_tiled,fullscreen}
	

# Change focus to next window, including floating window
alt + {_,shift + }Tab
    bspc node -f {next.local,prev.local}
 
# focus/swap

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# send focus window to current desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# Expanding windows
super + control {h,j,k,l}
    bspc node -z {left -20 0,right 20 0,top 0 -20,bottom 0 20} 

# Send the window to another edge of the screen
super + {_,alt + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window


